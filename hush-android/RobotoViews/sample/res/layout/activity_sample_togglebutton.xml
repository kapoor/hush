        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Condensed Bold Italic"
            android:textOff="Roboto Condensed Bold Italic"
            roboto:typeface="condensed_bold_italic"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Light"
            android:textOff="Roboto Light"
            roboto:typeface="light"
            tools:ignore="HardcodedText" />

