<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp" >

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Regular"
            android:textOff="Roboto Regular"
            roboto:typeface="regular"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Bold"
            android:textOff="Roboto Bold"
            roboto:typeface="bold"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Italic"
            android:textOff="Roboto Italic"
            roboto:typeface="italic"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Bold Italic"
            android:textOff="Roboto Bold Italic"
            roboto:typeface="bold_italic"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Black"
            android:textOff="Roboto Black"
            roboto:typeface="black"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Black Italic"
            android:textOff="Roboto Black Italic"
            roboto:typeface="black_italic"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Condensed"
            android:textOff="Roboto Condensed"
            roboto:typeface="condensed"
            tools:ignore="HardcodedText" />

        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Condensed Bold"
            android:textOff="Roboto Condensed Bold"
            roboto:typeface="condensed_bold"
