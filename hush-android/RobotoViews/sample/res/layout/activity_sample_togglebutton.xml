        <com.eevoskos.robotoviews.widget.RobotoToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Roboto Slab Light"
            android:textOff="Roboto Slab Light"
            roboto:typeface="slab_light"
            tools:ignore="HardcodedText" />

